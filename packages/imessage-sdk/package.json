{
	"name": "@macos-tools/imessage-sdk",
	"version": "1.0.0",
	"description": "A TypeScript SDK for querying iMessage data on macOS",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup src/index.ts --format cjs,esm --dts",
		"build:watch": "tsup src/index.ts --format cjs,esm --dts --watch",
		"test": "vitest run --exclude __tests__/integration.test.ts",
		"test:watch": "vitest --exclude __tests__/integration.test.ts",
		"test:integration": "vitest run __tests__/integration.test.ts",
		"test:all": "vitest run",
		"test:coverage": "vitest run --coverage",
		"typecheck": "tsc --noEmit",
		"check-types": "tsc --noEmit"
	},
	"keywords": [
		"imessage",
		"macos",
		"typescript",
		"sdk",
		"messages",
		"chat",
		"sms"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"better-sqlite3": "catalog:"
	},
	"devDependencies": {
		"@types/better-sqlite3": "catalog:",
		"@types/node": "catalog:",
		"@vitest/coverage-v8": "catalog:",
		"@macos-tools/typescript-config": "workspace:*",
		"tsup": "catalog:",
		"typescript": "catalog:",
		"vitest": "catalog:"
	},
	"engines": {
		"node": ">=14.0.0"
	},
	"os": [
		"darwin"
	]
}
