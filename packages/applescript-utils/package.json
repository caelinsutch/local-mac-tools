{
	"name": "@macos-tools/applescript-utils",
	"version": "1.0.0",
	"description": "Shared AppleScript execution utilities for macOS",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup src/index.ts --format cjs,esm --dts",
		"build:watch": "tsup src/index.ts --format cjs,esm --dts --watch",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"check-types": "tsc --noEmit"
	},
	"keywords": [
		"applescript",
		"osascript",
		"macos",
		"typescript",
		"utilities"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {},
	"devDependencies": {
		"@macos-tools/typescript-config": "workspace:*",
		"@types/node": "catalog:",
		"@vitest/coverage-v8": "catalog:",
		"tsup": "catalog:",
		"typescript": "catalog:",
		"vitest": "catalog:"
	},
	"engines": {
		"node": ">=22"
	},
	"os": [
		"darwin"
	]
}
