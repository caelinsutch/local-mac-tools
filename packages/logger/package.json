{
	"name": "@macos-tools/logger",
	"version": "1.0.0",
	"description": "Shared Winston-based logger for macos-tools",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup src/index.ts --format cjs,esm --dts",
		"build:watch": "tsup src/index.ts --format cjs,esm --dts --watch",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"check-types": "tsc --noEmit"
	},
	"keywords": [
		"logger",
		"winston",
		"typescript"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"chalk": "^5.6.2"
	},
	"devDependencies": {
		"@macos-tools/typescript-config": "workspace:*",
		"@types/node": "catalog:",
		"@vitest/coverage-v8": "catalog:",
		"tsup": "catalog:",
		"typescript": "catalog:",
		"vitest": "catalog:"
	},
	"engines": {
		"node": ">=22"
	}
}
